@model IEnumerable<WebApplication1.Models.AwardModel>

@{
    ViewBag.Title = "Awards";
}

<h2>Awards</h2>

<p>
    @Html.ActionLink("Create New", "AddAward")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditAward", new { id = item.ID }) |
            @Html.ActionLink("Delete", "DeleteAward", new { id=item.ID })
        </td>
    </tr>
}

</table>
